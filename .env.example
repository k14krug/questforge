# .env.example - Template for environment variables (do NOT commit real secrets here)

# Application environment: development or production
APP_ENV=development

# Flask environment and debug flags
FLASK_ENV=development
FLASK_DEBUG=1

# Database connection URI
DATABASE_URL=mysql+pymysql://user:password@host/dbname

# Development database URI (optional)
DEV_DATABASE_URI=mysql+pymysql://user:password@localhost/questforge_dev

# Secret key for Flask sessions and security
SECRET_KEY=your-secret-key

# OpenAI API keys and model settings
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL_LOGIC=gpt-4.1
OPENAI_MODEL_MAIN=gpt-4.1-mini

# SocketIO CORS origins (comma separated)
SOCKETIO_CORS_ORIGINS=http://localhost

# Logging level: DEBUG, INFO, WARNING, ERROR
LOGLEVEL=INFO

# Other optional settings
MAX_HISTORICAL_SUMMARIES=20
AI_PROVIDER=openai
